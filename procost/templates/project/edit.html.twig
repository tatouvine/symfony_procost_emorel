{% extends 'layout.html.twig' %}
{% block title %}Editing or create project{% endblock %}
{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Editing or create project</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('main_homepage') }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('list_project') }}">Project</a>
                </li>
                <li class="breadcrumb-item">Editing or create project</li>
            </ul>
        </div>
        <div class="tile">
            <div class="alert alert-dismissible alert-success my-4">
                <button class="close" type="button" data-dismiss="alert">Ã—</button>
                <strong>Well done!</strong> Message flash.
            </div>
            {{ form_start(form) }}
            <section>
                <h3>General information</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">

                        <div class="form-group row">
                            {{ form_errors(form.name) }}
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name,{'attr':{'class':'form-control','placeholder':form.name.vars.label} }) }}
                        </div>
                        <div class="form-group row">
                            {{ form_errors(form.description) }}
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description,{'attr':{'class':'form-control','placeholder':form.description.vars.label} }) }}
                        </div>
                        <div class="form-group row">
                            {{ form_errors(form.price) }}
                            {{ form_label(form.price) }}
                            {{ form_widget(form.price,{'type':'number','attr':{'class':'form-control','placeholder':form.price.vars.label} }) }}
                        </div>
                    </div>
                </div>
            </section>
            <hr/>
            <section>
                <h3>Production</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">

                        <div class="form-group row">
                            {{ form_errors(form.creationDate) }}
                            {{ form_label(form.creationDate) }}
                            {{ form_widget(form.creationDate,{'attr':{'class':'form-control','placeholder':form.creationDate.vars.label} }) }}
                        </div>

                        <div class="form-group row">
                            {{ form_errors(form.deliveyDate) }}
                            {{ form_label(form.deliveyDate) }}
                            {{ form_widget(form.deliveyDate,{'attr':{'class':'form-control','placeholder':form.deliveyDate.vars.label} }) }}
                        </div>
                    </div>
                </div>
            </section>
            <hr/>
            <div class="row">
                <div class="offset-md-6 col-md-6">
                    <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Create or Save</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
