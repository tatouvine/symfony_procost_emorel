{% extends 'layout.html.twig' %}
{% block title %}Editing or create project{% endblock %}
{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>{% if

                    path(
                        app.request.attributes.get('_route'),
                        app.request.attributes.get('_route_params')
                    ) == "/project/edit" %}
                    <h1><i class="fa fa-users"></i>Create project</h1>
                {% else %}
                    <h1><i class="fa fa-users"></i>Update project</h1>
                {% endif %}
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('main_homepage') }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('list_project') }}">Project</a>
                </li>
                {% if
                    path(
                        app.request.attributes.get('_route'),
                        app.request.attributes.get('_route_params')
                    ) == "/project/edit" %}
                    <li class="breadcrumb-item">Create project</li>
                {% else %}
                    <li class="breadcrumb-item">Update project</li>
                {% endif %}
            </ul>
        </div>
        <div class="tile">
            {{ form_start(form) }}
            <section>
                <h3>General information</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">

                        <div class="form-group row">
                            {{ form_errors(form.name) }}
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name,{'attr':{'class':'form-control','placeholder':form.name.vars.label} }) }}
                        </div>
                        <div class="form-group row">
                            {{ form_errors(form.description) }}
                            {{ form_label(form.description) }}
                            {{ form_widget(form.description,{'attr':{'class':'form-control','placeholder':form.description.vars.label} }) }}
                        </div>
                        <div class="form-group row">
                            {{ form_errors(form.price) }}
                            {{ form_label(form.price) }}
                            {{ form_widget(form.price,{'type':'number','attr':{'class':'form-control','placeholder':form.price.vars.label} }) }}
                        </div>
                    </div>
                </div>
            </section>
            <hr/>
            <section>
                <h3>Production</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">

                        <div class="form-group row">
                            {{ form_errors(form.creationDate) }}
                            {{ form_label(form.creationDate) }}
                            {{ form_widget(form.creationDate,{'attr':{'class':'form-control','placeholder':form.creationDate.vars.label} }) }}
                        </div>

                    </div>
                </div>
            </section>
            <hr/>
            <div class="row">
                <div class="offset-md-6 col-md-6">
                    {% if

                        path(
                            app.request.attributes.get('_route'),
                            app.request.attributes.get('_route_params')
                        ) == "/project/edit" %}
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Create</button>
                    {% else %}
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Update</button>
                    {% endif %}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
