{% extends 'layout.html.twig' %}
{% block title %}Plug Employ{% endblock %}
{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Followed by FIRSTNAME NAME</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('list_employ') }}">Employ</a>
                </li>
                <li class="breadcrumb-item">Followed by FIRSTNAME NAME</li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="tile">
                    <table class="table table-striped table-bordered table-sm">
                        <tbody>
                        <tr>
                            <th>FirstName
                            </td>
                            <td>Jack</td>
                        </tr>
                        <tr>
                            <th>Name
                            </td>
                            <td>FROST</td>
                        </tr>
                        <tr>
                            <th>Email
                            </td>
                            <td>jfrost@procost.com</td>
                        </tr>
                        <tr>
                            <th>Job
                            </td>
                            <td>Web developer</td>
                        </tr>
                        <tr>
                            <th>Hourly cost
                            </td>
                            <td>200 €</td>
                        </tr>
                        <tr>
                            <th>Hiring date
                            </td>
                            <td>10/12/2012</td>
                        </tr>
                        </tbody>
                    </table>
                    <a href="{{ asset('/employ/edit/'~1) }}" class="btn btn-info">
                        <i class="fa fa-pencil"></i>Modify
                    </a>
                </div>
                <div class="tile">
                    <h3 class="title-title mb-4">Add time</h3>
                    <form class="form-horizontal">
                        <div class="form-group row">
                            <label for="select-projects" class="control-label col-md-6">Project concerned</label>
                            <div class="col-md-6">
                                <select class="form-control" id="select-projects">
                                    {% for i in 1..6 %}
                                        <option>Project {{ i }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="days-count" class="control-label col-md-6">Number of hours</label>
                            <div class="col-md-6">
                                <input id="days-count" class="form-control" type="number" min="1">
                            </div>
                        </div>
                        <div class="row">
                            <div class="offset-md-6 col-md-8">
                                <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Save
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-8">
                <div class="tile pb-5">
                    <h3 class="tile-title">Production time history</h3>
                    <div class="table-responsive">
                        <table class="table table-striped table-hover table-sm">
                            <thead>
                            <tr>
                                <th>Project</th>
                                <th>Time</th>
                                <th>Entry date</th>
                                <th>Total cost</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for i in 1..6 %}
                                <tr>
                                    <td>Nom du projet</td>
                                    <td>4 heures</td>
                                    <td>23-04-2018</td>
                                    <td>1 400 €</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    <hr/>
                    <nav class="float-right">
                        <ul class="pagination">
                            <li class="page-item disabled">
                                <span class="page-link">&laquo;</span>
                            </li>
                            <li class="page-item active" aria-current="page">
                                <span class="page-link">1<span class="sr-only">(current)</span></span>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">2</a></li>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">3</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">&raquo;</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </main>
{% endblock %}
