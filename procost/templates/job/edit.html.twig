{% extends 'layout.html.twig' %}
{% block title %}Editing or create job{% endblock %}
{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>{% if

                    path(
                        app.request.attributes.get('_route'),
                        app.request.attributes.get('_route_params')
                    ) == "/job/edit" %}
                    <h1><i class="fa fa-users"></i>Create job</h1>
                {% else %}
                    <h1><i class="fa fa-users"></i>Update job</h1>
                {% endif %}
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="{{ path('main_homepage') }}"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">
                    <a href="{{ path('list_project') }}">Job</a>
                </li>

                {% if

                    path(
                        app.request.attributes.get('_route'),
                        app.request.attributes.get('_route_params')
                    ) == "/job/edit" %}
                    <li class="breadcrumb-item">Create job</li>
                {% else %}
                    <li class="breadcrumb-item">Update job</li>
                {% endif %}
            </ul>
        </div>
        <div class="tile">
            <div class="alert alert-dismissible alert-success my-4">
                <button class="close" type="button" data-dismiss="alert">Ã—</button>
                <strong>Well done!</strong> Message flash.
            </div>
            {{ form_start(form) }}
            <section>
                <h3>Information</h3>
                <div class="row mt-4">
                    <div class="offset-md-4 col-md-8">
                        <div class="form-group row">
                            {{ form_errors(form.name) }}
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name,{'attr':{'class':'form-control','placeholder':form.name.vars.label} }) }}
                        </div>
                    </div>
                </div>
            </section>
            <hr/>
            <div class="row">
                <div class="offset-md-6 col-md-6">
                    {% if

                        path(
                            app.request.attributes.get('_route'),
                            app.request.attributes.get('_route_params')
                        ) == "/job/edit" %}
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Create</button>
                    {% else %}
                        <button type="submit" class="btn btn-success"><i class="fa fa-save"></i>Update</button>
                    {% endif %}
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}
