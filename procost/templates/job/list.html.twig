{% extends 'layout.html.twig' %}
{% block title %}Employ List{% endblock %}
{% block content %}
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-book"></i>&nbsp;Job</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="/"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Job</li>
            </ul>
        </div>
        {% include 'flash_message.html.twig' %}
        <div class="tile pb-5">
            <a href="{{ asset('/job/edit/') }}" class="btn btn-primary float-right mb-4"><i
                        class="fa fa-plus-circle mr-2"></i>Add a new job</a>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Job Name</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for job in jobs %}
                        <tr>
                            <td>{{ job.name }}</td>
                            <td>
                                <a href="{{ asset('/job/edit/'~job.id) }}" class="btn btn-info btn-sm">
                                    <i class="fa fa-pencil mr-0"></i>
                                </a>
                                {% if job.numberJobUse == 0 %}
                                    <a href="{{ asset('/job/delete/' ~ job.id) }}" class="btn btn-danger btn-sm">
                                        <i class="fa fa-close mr-0"></i>
                                    </a>
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <hr/>
            {% include 'navigation_page.html.twig' %}
        </div>
    </main>
{% endblock %}
