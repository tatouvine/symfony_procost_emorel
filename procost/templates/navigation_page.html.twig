<nav class="float-right">
    <ul class="pagination">
        {% if actualyPage == 1 %}
            <li class="page-item disabled">
                <a class="page-link" href="#">«</a>
            </li>
        {% else %}
            <li class="page-item">
                {% set result =actualyPage-1 %}
                <a class="page-link" href="{{ asset(url~result) }}">«</a>
            </li>
        {% endif %}
        {% for i in 1..countPage %}
            {% if i == actualyPage %}
                <li class="page-item active" aria-current="page">
                    <a class="page-link" href="{{ asset(url~i) }}">{{ i }}</a>
                </li>
            {% else %}
                <li class="page-item " aria-current="page">
                    <a class="page-link" href="{{ asset(url~i) }}">{{ i }}</a>
                </li>
            {% endif %}
        {% endfor %}
        {% if actualyPage == countPage %}
            <li class="page-item disabled">
                <a class="page-link" href="#">&raquo;</a>
            </li>
        {% else %}
            <li class="page-item">
                {% set result =actualyPage+1 %}
                <a class="page-link" href="{{ asset(url~result) }}">&raquo;</a>
            </li>
        {% endif %}
    </ul>
</nav>
